{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "types": ["@types/node", "@types/jest"],

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "strict": false,
    "alwaysStrict": false,

    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "include": ["src", "test"]
}
